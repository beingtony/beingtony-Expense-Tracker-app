<!-- styles.xml -->
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC5</item>
    </style>

    <!-- Dark Theme with Green Accent for Buttons -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary colors for dark theme -->
        <item name="colorPrimary">#1E1E1E</item>
        <item name="colorPrimaryDark">#121212</item>
        <item name="colorAccent">#214022</item>

        <!-- Background color and text color -->
        <item name="android:background">#1E1E1E</item>
        <item name="android:textColor">#FFFFFF</item>

        <!-- Button style for green buttons -->
        <item name="android:buttonStyle">@style/GreenButton</item>
    </style>

    <!-- Green Button Style -->
    <style name="GreenButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#214022</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <!-- White Text Spinner Style -->
    <style name="WhiteSpinnerText">
        <item name="android:textColor">#000000</item>

    </style>

</resources>
