<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_gradient"
    android:padding="16dp">

    <!-- Amount Input -->
    <EditText
        android:id="@+id/edtAmount"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:hint="Enter Expense Amount"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA" />

    <!-- Category Input -->
    <EditText
        android:id="@+id/edtCategory"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edtAmount"
        android:layout_marginTop="16dp"
        android:hint="Enter Category"
        android:inputType="text"
        android:padding="12dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA" />

    <!-- Add Expense Input -->
    <EditText
        android:id="@+id/edtDescription"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edtCategory"
        android:layout_marginTop="16dp"
        android:hint="Add Description (optional)"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        android:textSize="18sp" />

    <!-- Category Icons -->
    <LinearLayout
        android:id="@+id/iconContainerRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtDescription"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/icon_transport"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:contentDescription="Transportation Icon"
            android:padding="8dp"
            android:src="@drawable/transport" />

        <ImageView
            android:id="@+id/icon_food"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/food"
            android:contentDescription="Food Icon"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/icon_utilities"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/utilities"
            android:contentDescription="Utilities Icon"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/iconContainerRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconContainerRow1"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/icon_entertainment"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/entertainment"
            android:contentDescription="Entertainment Icon"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/icon_healthcare"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/healthcare"
            android:contentDescription="Healthcare Icon"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/icon_other"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:src="@drawable/other"
            android:contentDescription="Other Icon"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Add Expense Button -->

    <!-- Back Button -->

    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="#DEF2DC"
        android:text="Add Expense"
        android:textColor="#1E1E1E"
        android:textSize="18sp"
        android:background="@drawable/rounded_button"
        />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="284dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="#DEF2DC"
        android:text="Back"
        android:textColor="#1E1E1E"
        android:textSize="16sp"
        android:background="@drawable/rounded_button"
        />

</RelativeLayout>
